    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
              "run-script",
              "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "pwa-node"
          },
          {
            "name": "Debug server",
            "request": "launch",
            "runtimeArgs": [
              "run-script",
              "debug-server"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "pwa-node"
          },
          {
            "name": "Debug web",
            "request": "launch",
            "runtimeArgs": [
              "run-script",
              "debug-web"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "pwa-node"
          },
          {
            "name": "Debug test",
            "request": "launch",
            "runtimeArgs": [
              "run-script",
              "debug-server-test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "pwa-node"
          },
          {
            "name": "Debug test single",
            "request": "launch",
            "runtimeArgs": [
              "run-script",
              "debug-server-test-single"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "type": "pwa-node"
          }
    ],
    "compounds": [
      {
          "name": "Server/Client",
          "configurations": ["Debug server", "Debug web"]
      }
  ]
}